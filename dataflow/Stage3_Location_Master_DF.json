{
	"name": "Stage3_Location_Master_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Incre_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage2DeltaLocation"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "DWH_Dump",
						"type": "LinkedServiceReference"
					},
					"name": "SQLDWH"
				}
			],
			"transformations": [
				{
					"name": "LocKey"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Location_Code as string,",
				"          Location_Name as string,",
				"          Address as string,",
				"          Address_2 as string,",
				"          City as string,",
				"          Phone_No as string,",
				"          Phone_No_2 as string,",
				"          Post_Code as string,",
				"          County as string,",
				"          E_Mail as string,",
				"          Country_Region_Code as string,",
				"          Use_As_In_Transit as integer,",
				"          Require_Put_away as integer,",
				"          Require_Pick as integer,",
				"          Use_Cross_Docking as integer,",
				"          Require_Receive as integer,",
				"          Require_Shipment as integer,",
				"          State_Code as string,",
				"          Subcontracting_Location as integer,",
				"          Subcontractor_No as string,",
				"          Depot as integer,",
				"          Site_Code as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'delta-lake',",
				"     folderPath: 'Master/Location') ~> Stage2DeltaLocation",
				"Stage2DeltaLocation derive(Loc_Key = concat(toString(Site_Code),'|',Location_Code)) ~> LocKey",
				"LocKey sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'primarysales',",
				"     tableName: 'dim_location',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     recreate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SQLDWH"
			]
		}
	}
}