{
	"name": "SalesInvoiceHeaderSource",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Sales_Invoice_Header",
						"type": "DatasetReference"
					},
					"name": "SalesInvoiceHeaderSource"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "DataCleaning"
				}
			],
			"scriptLines": [
				"source(output(",
				"          InvoiceNo as string,",
				"          Excise_InvoiceNo as string,",
				"          Customer_No as string,",
				"          Posted_CustomerCategory as string,",
				"          {Order Date} as string,",
				"          {Posting Date} as string,",
				"          DACommSalesPerson as string,",
				"          {Route Code} as string,",
				"          {Shortcut Dimension 1 Code} as string,",
				"          {Shortcut Dimension 2 Code} as string,",
				"          {Order No_} as string,",
				"          {Vehicle Type} as string,",
				"          {Ship-to Address} as string,",
				"          {Ship-to Address 2} as string,",
				"          {Ship-to City} as string,",
				"          {Ship-to Code} as string,",
				"          {Ship-to Name} as string,",
				"          {Customer Group Code} as string,",
				"          {Last Modified On} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SalesInvoiceHeaderSource",
				"SalesInvoiceHeaderSource derive(InvoiceNo = toString(iifNull(InvoiceNo, \"None\", InvoiceNo)),",
				"          Excise_InvoiceNo = toString(iifNull(Excise_InvoiceNo, \"None\", Excise_InvoiceNo)),",
				"          Customer_No = toString(iifNull(Customer_No, \"None\", Customer_No)),",
				"          Posted_CustomerCategory = toString(iifNull(Posted_CustomerCategory, \"None\", Posted_CustomerCategory)),",
				"          {Order Date} = toTimestamp({Order Date},'dd-MM-yyyy hh:mm:ss a','UTC'),",
				"          {Posting Date} = toTimestamp({Posting Date},'dd-MM-yyyy hh:mm:ss a','UTC'),",
				"          DACommSalesPerson = toString(iifNull(DACommSalesPerson, \"None\", DACommSalesPerson)),",
				"          {Route Code} = toString(iifNull({Route Code}, \"None\", {Route Code})),",
				"          {Shortcut Dimension 1 Code} = toString(iifNull({Shortcut Dimension 1 Code}, \"None\",{Shortcut Dimension 1 Code})),",
				"          {Shortcut Dimension 2 Code} = toString(iifNull({Shortcut Dimension 2 Code}, \"None\",{Shortcut Dimension 2 Code})),",
				"          {Order No_} = toString(iifNull({Order No_}, \"None\",{Order No_})),",
				"          {Vehicle Type} = toString(iifNull({Vehicle Type}, \"None\",{Vehicle Type}))) ~> DataCleaning"
			]
		}
	}
}