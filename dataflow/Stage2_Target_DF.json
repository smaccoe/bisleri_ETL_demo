{
	"name": "Stage2_Target_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Target",
						"type": "DatasetReference"
					},
					"name": "targetsource"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Contanier_Name as string ('curated-data'),",
				"     Folder_Name as string ('Target')",
				"}",
				"source(output(",
				"          {Customer Group Code} as string,",
				"          {Customer No_} as string,",
				"          {End Date} as string,",
				"          {Item No_} as string,",
				"          {Item Unit of Measure} as string,",
				"          Month as string,",
				"          T_ROUTE as string,",
				"          {Start Date} as string,",
				"          {Target Qty} as string,",
				"          {DLP Target Qty} as string,",
				"          Year as string,",
				"          {Last Modified} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> targetsource",
				"targetsource select(mapColumn(",
				"          Customer_Group_Code = {Customer Group Code},",
				"          Customer_No_ = {Customer No_},",
				"          End_Date = {End Date},",
				"          Item_No_ = {Item No_},",
				"          Item_Unit_of_Measure = {Item Unit of Measure},",
				"          Month,",
				"          T_ROUTE,",
				"          Start_Date = {Start Date},",
				"          Target_Qty = {Target Qty},",
				"          DLP_Target_Qty = {DLP Target Qty},",
				"          Year,",
				"          Last_Modified = {Last Modified}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(Customer_Group_Code = iifNull(Customer_Group_Code, toString(null())),",
				"          Customer_No_ = iifNull(Customer_No_, toString(null())),",
				"          End_Date = toTimestamp({End_Date}, 'dd/MM/yyyy hh:mm:ss a','UTC','yyyy-MM-dd hh:mm:ss a'),",
				"          Item_No_ = iifNull(Item_No_, toString(null())),",
				"          Item_Unit_of_Measure = iifNull(Item_Unit_of_Measure, toString(null())),",
				"          Month = toInteger(iifNull(Month, toString(null()))),",
				"          T_ROUTE = toString(null()),",
				"          Target_Qty = toInteger(iifNull(Target_Qty, toString(null()))),",
				"          DLP_Target_Qty = toInteger(iifNull(DLP_Target_Qty, toString(null()))),",
				"          Year = toInteger(iifNull(Year, toString(null()))),",
				"          Site = toString(null())) ~> derivedColumn1"
			]
		}
	}
}