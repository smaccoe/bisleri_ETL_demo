{
	"name": "Stage2_Route_Master_Dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Stage2_Route_master_Source",
						"type": "DatasetReference"
					},
					"name": "Stage2RouteMaster"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Code as string,",
				"          Description as string,",
				"          Type as string,",
				"          Category as string,",
				"          {Route category} as string,",
				"          {Route Street category} as string,",
				"          Site_Code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Stage2RouteMaster",
				"Stage2RouteMaster select(mapColumn(",
				"          Code,",
				"          Description,",
				"          Type,",
				"          Category,",
				"          Route_category = {Route category},",
				"          Route_Street_category = {Route Street category},",
				"          Site_Code",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(Code = iifNull(Code, toString(null())),",
				"          Description = iifNull(Description, toString(null())),",
				"          Type = toInteger(iifNull(Type, toString(null()))),",
				"          Category = iifNull(Category, toString(null())),",
				"          Route_category = toInteger(iifNull(Route_category, toString(null()))),",
				"          Route_Street_category = iifNull(Route_Street_category, toString(null())),",
				"          Site_Code = iifNull(Site_Code, toString(null()))) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'delta-lake',",
				"     folderPath: 'Master/Route_Master',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}