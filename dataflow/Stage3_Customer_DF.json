{
	"name": "Stage3_Customer_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage3CustomerSource"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "DWH_Dump",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Customer_No as string,",
				"          Customer_Name as string,",
				"          Customer_Category as string,",
				"          Customer_Subcategory_Code as string,",
				"          Customer_Group_Code as string,",
				"          Customer_Parent_Group as string,",
				"          Customer_Type as string,",
				"          Billing_Type as integer,",
				"          Channel as integer,",
				"          Sub_Channel_1 as string,",
				"          Sub_Channel_2 as string,",
				"          Sub_Channel_3 as string,",
				"          Creation_Date_Time as timestamp,",
				"          Customer_Credit_Limit_Days as integer,",
				"          Credit_Limit_LCY as decimal(8,4),",
				"          Customer_Posting_Group as string,",
				"          Customer_General_Business_Posting_Group as string,",
				"          Customer_Discount_Group as string,",
				"          Customer_Price_Group as string,",
				"          Currency_Code as string,",
				"          Customer_Invoice_Discount_Code as string,",
				"          Payment_Terms_Code as string,",
				"          Payment_Method_Code as string,",
				"          Collection_Method as string,",
				"          Customer_Scheme_Applicable as integer,",
				"          Customer_Contact as string,",
				"          Phone_No as string,",
				"          Phone_No_2 as string,",
				"          E_Mail as string,",
				"          PAN_NO as string,",
				"          TIN_NO as string,",
				"          Address as string,",
				"          Address_2 as string,",
				"          City as string,",
				"          State_Code as string,",
				"          Post_Code as string,",
				"          Customer_Salesperson_Code as string,",
				"          Customer_Executive_Code as string,",
				"          Customer_Route_Code as string,",
				"          Customer_Territory as string,",
				"          Customer_Status as integer,",
				"          Site_Code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'delta-lake',",
				"     folderPath: 'Master/Customer') ~> Stage3CustomerSource",
				"filter1 derive(Cust_Key = concat(toString(Site_Code),'|',Customer_No),",
				"          SP_Key = concat(toString(Site_Code),'|',Customer_Territory)) ~> derivedColumn1",
				"Stage3CustomerSource filter(isNull(Site_Code)) ~> filter1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'primarysales',",
				"     tableName: 'dim_customer',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          Customer_No,",
				"          Customer_Name,",
				"          Customer_Category,",
				"          Customer_Subcategory_Code,",
				"          Customer_Group_Code,",
				"          Customer_Parent_Group,",
				"          Customer_Type,",
				"          Billing_Type,",
				"          Channel,",
				"          Sub_Channel_1,",
				"          Sub_Channel_2,",
				"          Sub_Channel_3,",
				"          Creation_Date_Time,",
				"          Customer_Credit_Limit_Days,",
				"          Credit_Limit_LCY,",
				"          Customer_Posting_Group,",
				"          Customer_General_Business_Posting_Group,",
				"          Customer_Discount_Group,",
				"          Customer_Price_Group,",
				"          Currency_Code,",
				"          Customer_Invoice_Discount_Code,",
				"          Payment_Terms_Code,",
				"          Payment_Method_Code,",
				"          Collection_Method,",
				"          Customer_Scheme_Applicable,",
				"          Customer_Contact,",
				"          Phone_No,",
				"          Phone_No_2,",
				"          E_Mail,",
				"          PAN_NO,",
				"          TIN_NO,",
				"          Address,",
				"          Address_2,",
				"          City,",
				"          State_Code,",
				"          Post_Code,",
				"          Customer_Salesperson_Code,",
				"          Customer_Executive_Code,",
				"          Customer_Route_Code,",
				"          Customer_Territory,",
				"          Customer_Status,",
				"          Site_Code,",
				"          Cust_Key,",
				"          SP_Key",
				"     )) ~> sink1"
			]
		}
	}
}