{
	"name": "Stage3_Customer_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage3CustomerSource"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "DWH_Dump",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Customer_No as string,",
				"          Customer_Name as string,",
				"          Customer_Category as string,",
				"          Customer_Subcategory_Code as string,",
				"          Customer_Group_Code as string,",
				"          Customer_Parent_Group as string,",
				"          Customer_Type as string,",
				"          Billing_Type as integer,",
				"          Channel as integer,",
				"          Sub_Channel_1 as string,",
				"          Sub_Channel_2 as string,",
				"          Sub_Channel_3 as string,",
				"          Creation_Date_Time as timestamp,",
				"          Activate_Credit_Limit_Days as integer,",
				"          Credit_Limit_LCY as decimal(8,4),",
				"          Customer_Posting_Group as string,",
				"          Customer_General_Business_Posting_Group as string,",
				"          Customer_Discount_Group as string,",
				"          Customer_Price_Group as string,",
				"          Currency_Code as string,",
				"          Customer_Invoice_Discount_Code as string,",
				"          Payment_Terms_Code as string,",
				"          Payment_Method_Code as string,",
				"          Collection_Method as string,",
				"          Customer_Scheme_Applicable as integer,",
				"          Customer_Contact as string,",
				"          Phone_No as string,",
				"          Phone_No_2 as string,",
				"          E_Mail as string,",
				"          PAN_NO as string,",
				"          TIN_NO as string,",
				"          Address as string,",
				"          Address_2 as string,",
				"          City as string,",
				"          State_Code as string,",
				"          Post_Code as string,",
				"          Customer_Salesperson_Code as string,",
				"          Customer_Executive_Code as string,",
				"          Customer_Route_Code as string,",
				"          Customer_Territory as string,",
				"          Customer_Status as integer,",
				"          Site_Code as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'delta-lake',",
				"     folderPath: 'Master/Customer') ~> Stage3CustomerSource",
				"Stage3CustomerSource derive(Cust_Key = concat(toString(Site_Code),'|',Customer_No)) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'primarysales',",
				"     tableName: 'dim_customer',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     recreate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}