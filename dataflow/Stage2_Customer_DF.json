{
	"name": "Stage2_Customer_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Transaction_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage2FullLoadCustomerSource"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage2FullLoadCustomerSink",
					"rejectedDataLinkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "RenamingColumns"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Contanier_Name as string ('delta-lake'),",
				"     Folder_Name as string ('Master/Customer'),",
				"     Table as string ('temp')",
				"}",
				"source(output(",
				"          No_ as string,",
				"          Name as string,",
				"          Address as string,",
				"          {Address 2} as string,",
				"          Contact as string,",
				"          City as string,",
				"          {Phone No_} as string,",
				"          {Credit Limit (LCY)} as string,",
				"          {Customer Posting Group} as string,",
				"          {Currency Code} as string,",
				"          {Customer Price Group} as string,",
				"          {Payment Terms Code} as string,",
				"          {Invoice Disc_ Code} as string,",
				"          {Customer Disc_ Group} as string,",
				"          {Collection Method} as string,",
				"          {Payment Method Code} as string,",
				"          {Gen_ Bus_ Posting Group} as string,",
				"          {Post Code} as string,",
				"          {E-Mail} as string,",
				"          {T_I_N_ No_} as string,",
				"          {P_A_N_ No_} as string,",
				"          {Phone No_2} as string,",
				"          {Customer Group Code} as string,",
				"          {Customer Category} as string,",
				"          {Route Code} as string,",
				"          {Customer Type} as string,",
				"          {Executive Code} as string,",
				"          {Customer Subcategory Code} as string,",
				"          {Creation Date Time} as string,",
				"          {Salesperson Code} as string,",
				"          Territory as string,",
				"          {Parent Group} as string,",
				"          {Activate Credit Limit Days} as string,",
				"          {Billing Type} as string,",
				"          {Scheme Applicable} as string,",
				"          Channel as string,",
				"          {Sub-Channel 1} as string,",
				"          {Sub-Channel 2} as string,",
				"          {Sub-Channel 3} as string,",
				"          {State Code} as string,",
				"          {Active Customer} as string,",
				"          Site_Code as string",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'data-lake',",
				"     folderPath: 'Master',",
				"     fileName: ($Table),",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     multiLineRow: true) ~> Stage2FullLoadCustomerSource",
				"Stage2FullLoadCustomerSource select(mapColumn(",
				"          Customer_No = No_,",
				"          Customer_Name = Name,",
				"          Customer_Category = {Customer Category},",
				"          Customer_Subcategory_Code = {Customer Subcategory Code},",
				"          Customer_Group_Code = {Customer Group Code},",
				"          Customer_Parent_Group = {Parent Group},",
				"          Customer_Type = {Customer Type},",
				"          Billing_Type = {Billing Type},",
				"          Channel,",
				"          Sub_Channel_1 = {Sub-Channel 1},",
				"          Sub_Channel_2 = {Sub-Channel 2},",
				"          Sub_Channel_3 = {Sub-Channel 3},",
				"          Creation_Date_Time = {Creation Date Time},",
				"          Customer_Credit_Limit_Days = {Activate Credit Limit Days},",
				"          Credit_Limit_LCY = {Credit Limit (LCY)},",
				"          Customer_Posting_Group = {Customer Posting Group},",
				"          Customer_General_Business_Posting_Group = {Gen_ Bus_ Posting Group},",
				"          Customer_Discount_Group = {Customer Disc_ Group},",
				"          Customer_Price_Group = {Customer Price Group},",
				"          Currency_Code = {Currency Code},",
				"          Customer_Invoice_Discount_Code = {Invoice Disc_ Code},",
				"          Payment_Terms_Code = {Payment Terms Code},",
				"          Payment_Method_Code = {Payment Method Code},",
				"          Collection_Method = {Collection Method},",
				"          Customer_Scheme_Applicable = {Scheme Applicable},",
				"          Customer_Contact = Contact,",
				"          Phone_No = {Phone No_},",
				"          Phone_No_2 = {Phone No_2},",
				"          E_Mail = {E-Mail},",
				"          PAN_NO = {P_A_N_ No_},",
				"          TIN_NO = {T_I_N_ No_},",
				"          Address,",
				"          Address_2 = {Address 2},",
				"          City,",
				"          State_Code = {State Code},",
				"          Post_Code = {Post Code},",
				"          Customer_Salesperson_Code = {Salesperson Code},",
				"          Customer_Executive_Code = {Executive Code},",
				"          Customer_Route_Code = {Route Code},",
				"          Customer_Territory = Territory,",
				"          Customer_Status = {Active Customer},",
				"          Site_Code",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenamingColumns",
				"RenamingColumns derive(Customer_No = iifNull(Customer_No, toString(null())),",
				"          Customer_Name = iifNull(Customer_Name, toString(null())),",
				"          Customer_Category = iifNull(Customer_Category, toString(null())),",
				"          Customer_Subcategory_Code = iifNull(Customer_Subcategory_Code, toString(null())),",
				"          Customer_Group_Code = iifNull(Customer_Group_Code, toString(null())),",
				"          Customer_Parent_Group = iifNull(Customer_Parent_Group, toString(null())),",
				"          Customer_Type = iifNull(Customer_Type, toString(null())),",
				"          Billing_Type = toInteger(iifNull(Billing_Type, toString(null()))),",
				"          Channel = toInteger(iifNull(Channel, toString(null()))),",
				"          Sub_Channel_1 = iifNull(Sub_Channel_1, toString(null())),",
				"          Sub_Channel_2 = iifNull(Sub_Channel_2, toString(null())),",
				"          Sub_Channel_3 = iifNull(Sub_Channel_3, toString(null())),",
				"          Creation_Date_Time = toTimestamp(toString(toTimestamp(Creation_Date_Time,'yyyy-MM-dd HH:mm:ss','yyyy-MM-dd hh:mm:ss.SSS'),'yyyy-MM-dd hh:mm:ss.SSS')),",
				"          Customer_Credit_Limit_Days = toInteger(iifNull(Customer_Credit_Limit_Days, toString(null()))),",
				"          Credit_Limit_LCY = toDecimal(iifNull(Credit_Limit_LCY, toString(null())),8,4),",
				"          Customer_Posting_Group = iifNull(Customer_Posting_Group, toString(null())),",
				"          Customer_General_Business_Posting_Group = iifNull(Customer_General_Business_Posting_Group, toString(null())),",
				"          Customer_Discount_Group = iifNull(Customer_Discount_Group, toString(null())),",
				"          Customer_Price_Group = iifNull(Customer_Price_Group, toString(null())),",
				"          Currency_Code = iifNull(Currency_Code, toString(null())),",
				"          Customer_Invoice_Discount_Code = iifNull(Customer_Invoice_Discount_Code, toString(null())),",
				"          Payment_Terms_Code = iifNull(Payment_Terms_Code, toString(null())),",
				"          Payment_Method_Code = iifNull(Payment_Method_Code, toString(null())),",
				"          Collection_Method = iifNull(Collection_Method, toString(null())),",
				"          Customer_Scheme_Applicable = toInteger(iifNull(Customer_Scheme_Applicable, toString(null()))),",
				"          Customer_Contact = iifNull(Customer_Contact, toString(null())),",
				"          Phone_No = iifNull(Phone_No, toString(null())),",
				"          Phone_No_2 = iifNull(Phone_No_2, toString(null())),",
				"          E_Mail = iifNull(E_Mail, toString(null())),",
				"          PAN_NO = iifNull(PAN_NO, toString(null())),",
				"          TIN_NO = iifNull(TIN_NO, toString(null())),",
				"          Address = iifNull(Address, toString(null())),",
				"          Address_2 = iifNull(Address_2, toString(null())),",
				"          City = iifNull(City, toString(null())),",
				"          State_Code = iifNull(State_Code, toString(null())),",
				"          Post_Code = iifNull(Post_Code, toString(null())),",
				"          Customer_Salesperson_Code = iifNull(Customer_Salesperson_Code, toString(null())),",
				"          Customer_Executive_Code = iifNull(Customer_Executive_Code, toString(null())),",
				"          Customer_Route_Code = iifNull(Customer_Route_Code, toString(null())),",
				"          Customer_Territory = iifNull(Customer_Territory, toString(null())),",
				"          Customer_Status = toInteger(iifNull(Customer_Status, toString(null())))) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: ($Contanier_Name),",
				"     folderPath: ($Folder_Name),",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Stage2FullLoadCustomerSink"
			]
		}
	}
}