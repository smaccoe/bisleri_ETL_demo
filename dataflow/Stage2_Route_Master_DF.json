{
	"name": "Stage2_Route_Master_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Transaction_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "Stage2RouteMaster"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Code as string,",
				"          Description as string,",
				"          Type as string,",
				"          Category as string,",
				"          {Route category} as short,",
				"          {Route Street category} as string,",
				"          Site_Code as short",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'data-lake',",
				"     folderPath: 'Master',",
				"     fileName: 'Route_Master2023-05-05 03:04:21.21.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> Stage2RouteMaster",
				"Stage2RouteMaster select(mapColumn(",
				"          Route_Code = Code,",
				"          Route_Description = Description,",
				"          Route_Type = Type,",
				"          Category,",
				"          Route_category = {Route category},",
				"          Route_Street_category = {Route Street category},",
				"          Site_Code",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(Route_Code = iifNull(Route_Code, toString(null())),",
				"          Route_Description = iifNull(Route_Description, toString(null())),",
				"          Category = iifNull(Category, toString(null())),",
				"          Route_category = toInteger(Route_category),",
				"          Route_Street_category = iifNull(Route_Street_category, toString(null())),",
				"          Site_Code = toInteger(Site_Code),",
				"          Route_Type = toInteger(Route_Type)) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'delta-lake',",
				"     folderPath: 'Master/Route_Master',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}