{
	"name": "Stage2_Sales_Hierarchy",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Transaction_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "saleshierarchy"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Territory Code} as string,",
				"          {Area Code} as string,",
				"          {Branch Code} as string,",
				"          {Zone Code} as string,",
				"          {National Code} as string,",
				"          {National Name} as string,",
				"          {Region Code} as string,",
				"          {Region Name} as string,",
				"          {Regional Sales Head Name} as string,",
				"          {Branch Name} as string,",
				"          {Branch Sales Head Name} as string,",
				"          {Zone Name} as string,",
				"          {Sales Manager Name} as string,",
				"          {Area Name} as string,",
				"          {Area Sales Manager Name} as string,",
				"          {Territory Name} as string,",
				"          {Sales Executive Name} as string,",
				"          {Division Name} as string,",
				"          {SE Code} as string,",
				"          Channel as boolean,",
				"          {Business Unit} as boolean,",
				"          Site_Code as string",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'data-lake',",
				"     folderPath: 'Master',",
				"     fileName: 'Sales_Hierarchy2023-05-02 01:11:24.24.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> saleshierarchy",
				"saleshierarchy select(mapColumn(",
				"          Territory_Code = {Territory Code},",
				"          Area_Code = {Area Code},",
				"          Branch_Code = {Branch Code},",
				"          Zone_Code = {Zone Code},",
				"          National_Code = {National Code},",
				"          National_Name = {National Name},",
				"          Region_Code = {Region Code},",
				"          Region_Name = {Region Name},",
				"          Regional_Sales_Head_Name = {Regional Sales Head Name},",
				"          Branch_Name = {Branch Name},",
				"          Branch_Sales_Head_Name = {Branch Sales Head Name},",
				"          Zone_Name = {Zone Name},",
				"          Sales_Manager_Name = {Sales Manager Name},",
				"          Area_Name = {Area Name},",
				"          Area_Sales_Manager_Name = {Area Sales Manager Name},",
				"          Territory_Name = {Territory Name},",
				"          Sales_Executive_Name = {Sales Executive Name},",
				"          Division_Name = {Division Name},",
				"          SE_Code = {SE Code},",
				"          Channel,",
				"          Business_Unit = {Business Unit},",
				"          Site_Code",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(Territory_Code = iifNull(Territory_Code, toString(null())),",
				"          Area_Code = iifNull(Area_Code,toString(null())),",
				"          Branch_Code = iifNull(Branch_Code,toString(null())),",
				"          Zone_Code = iifNull(Zone_Code,toString(null())),",
				"          National_Code = iifNull(National_Code,toString(null())),",
				"          National_Name = iifNull(National_Name,toString(null())),",
				"          Region_Code = iifNull(Region_Code,toString(null())),",
				"          Region_Name = iifNull(Region_Name,toString(null())),",
				"          Regional_Sales_Head_Name = iifNull(Regional_Sales_Head_Name,toString(null())),",
				"          Branch_Name = iifNull(Branch_Name,toString(null())),",
				"          Branch_Sales_Head_Name = iifNull(Branch_Sales_Head_Name,toString(null())),",
				"          Zone_Name = iifNull(Zone_Name,toString(null())),",
				"          Sales_Manager_Name = iifNull(Sales_Manager_Name,toString(null())),",
				"          Area_Name = iifNull(Area_Name,toString(null())),",
				"          Area_Sales_Manager_Name = iifNull(Area_Sales_Manager_Name,toString(null())),",
				"          Territory_Name = iifNull(Territory_Name,toString(null())),",
				"          Sales_Executive_Name = iifNull(Sales_Executive_Name,toString(null())),",
				"          Division_Name = iifNull(Division_Name,toString(null())),",
				"          SE_Code = iifNull(SE_Code,toString(null())),",
				"          Channel = iif(Channel, 1, 0),",
				"          Business_Unit = iif(Business_Unit ,1,0),",
				"          Site_Code = iifNull(Site_Code,toString(null()))) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}