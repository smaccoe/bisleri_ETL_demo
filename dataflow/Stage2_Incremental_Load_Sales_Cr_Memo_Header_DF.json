{
	"name": "Stage2_Incremental_Load_Sales_Cr_Memo_Header_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "Transaction_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "SalesCrMemoHeader"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					},
					"name": "SalesCrMemoHeaderSink",
					"rejectedDataLinkedService": {
						"referenceName": "Delta_Full_Load_Folder",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     container_name as string ('delta-lake'),",
				"     folder_name as string ('Transaction/Incremental-Load/Sales_CR_Memo_Header'),",
				"     latest_file as string ('temp')",
				"}",
				"source(output(",
				"          No_ as string,",
				"          {Sell-to Customer No_} as string,",
				"          {Bill-to Customer No_} as string,",
				"          {Posting Date} as string,",
				"          {Shipment Date} as string,",
				"          {Location Code} as string,",
				"          ECOM as boolean,",
				"          {Last Modified On} as string,",
				"          Site_Code as string",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'data-lake',",
				"     folderPath: 'Transaction/Incremental-Load/Sales_CR_Memo_Header',",
				"     fileName: ($latest_file),",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     multiLineRow: true) ~> SalesCrMemoHeader",
				"select1 derive(Document_No = iifNull(Document_No, toString(null())),",
				"          Customer_No = iifNull(Customer_No, toString(null())),",
				"          Bill_to_Customer_No = iifNull(Bill_to_Customer_No, toString(null())),",
				"          Posting_Date = toTimestamp(toString(toTimestamp(Posting_Date,'yyyy-MM-dd HH:mm:ss','yyyy-MM-dd hh:mm:ss.SSS'),'yyyy-MM-dd hh:mm:ss.SSS')),",
				"          Shipment_Date = toTimestamp(toString(toTimestamp(Shipment_Date,'yyyy-MM-dd HH:mm:ss','yyyy-MM-dd hh:mm:ss.SSS'),'yyyy-MM-dd hh:mm:ss.SSS')),",
				"          Location_Code = iifNull(Location_Code, toString(null())),",
				"          ECOM = iif(ECOM,1 ,0),",
				"          Last_Modified_On = toTimestamp(toString(toTimestamp(Last_Modified_On,'yyyy-MM-dd HH:mm:ss','yyyy-MM-dd hh:mm:ss.SSS'),'yyyy-MM-dd hh:mm:ss.SSS')),",
				"          Site_Code = toString(Site_Code)) ~> derivedColumn1",
				"SalesCrMemoHeader select(mapColumn(",
				"          Document_No = No_,",
				"          Customer_No = {Sell-to Customer No_},",
				"          Bill_to_Customer_No = {Bill-to Customer No_},",
				"          Posting_Date = {Posting Date},",
				"          Shipment_Date = {Shipment Date},",
				"          Location_Code = {Location Code},",
				"          ECOM,",
				"          Last_Modified_On = {Last Modified On},",
				"          Site_Code",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: ($container_name),",
				"     folderPath: ($folder_name),",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SalesCrMemoHeaderSink"
			]
		}
	}
}